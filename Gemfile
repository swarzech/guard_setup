source 'https://rubygems.org'
ruby "2.0.0"

# The guard gem used for watching and compiling our assets
gem 'guard'

# Guard plugins used for watching and compiling each asset

group :guard_plugins do
  gem 'guard-haml-coffee', :git => 'https://github.com/guard/guard-haml-coffee.git'
  gem 'guard-sass'
  gem 'guard-coffeescript'
  gem 'guard-uglify'
  gem 'guard-jammit'
  gem 'guard-sprockets'
end

group :utilities do
  gem 'uglifier'
  gem 'sprockets-sass'
  gem 'sass-rails'
end